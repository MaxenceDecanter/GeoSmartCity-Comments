                        "type": "string"
                    },
                    {
                        "name": "position",
                        "in": "query",
                        "description": "GeoJSON array descripting the marker.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "description",
                        "in": "query",
                        "description": "Description of the marker.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Category of the marker.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "visible",
                        "in": "query",
                        "description": "1 if the marker is visible, 0 if not.",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "type": "boolean"
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete a marker",
                "description": "This deletes a marker in the database and returns whether it's a succes or not.\n",
                "parameters": [
                    {
                        "name": "id",
